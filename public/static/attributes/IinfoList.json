{
  "classId": "idm.component.mobile.iinfoList",
  "comName": "信息列表",
  "className": "IinfoList",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "标题显示",
          "desc": "标题是否显示",
          "bindKey": "isTitleShow",
          "default": true
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "图片显示",
          "desc": "图片是否显示",
          "bindKey": "isimageShow",
          "default": true
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "标题",
          "bindKey": "title",
          "default": "支部信息"
        },
        {
          "type": "group",
          "text": "右侧图标",
          "desc": "设置标题图标属性，颜色会覆盖主题色",
          "children": [
            {
              "type": "iconSelect",
              "layoutType": "inline",
              "text": "选择图标",
              "bindKey": "titleIcon",
              "default": ""
            },
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "desc": "设置图标颜色，会覆盖主题色",
              "text": "图标颜色",
              "bindKey": "titleIconFontColor",
              "default": {}
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图标大小",
              "bindKey": "titleIconFontSize",
              "default": 18
            },
            {
              "type": "box",
              "layoutType": "block",
              "text": "内外边距",
              "bindKey": "leftIconBox",
              "default": {
                "marginTopVal": "",
                "marginRightVal": "",
                "marginBottomVal": "",
                "marginLeftVal": "0",
                "paddingTopVal": "",
                "paddingRightVal": "",
                "paddingBottomVal": "",
                "paddingLeftVal": ""
              }
            }
          ]
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "标题字体",
          "bindKey": "titleFont"
        },
        {
          "type": "textarea",
          "layoutType": "inline",
          "text": "内容文本",
          "bindKey": "contextText",
          "defaultValRegExp": false,
          "desc": "可用文本表达式配置",
          "default": "<div style=\"line-height:30px;padding-top:5px;\"><span style=\"color:#666666\">名称：</span><span style=\"color:#333333\">@[name]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">类别：</span><span style=\"color:#333333\">@[category]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">领导班子当选日期：</span><span style=\"color:#333333\">@[getTime]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">本届截止日期：</span><span style=\"color:#333333\">@[cutTime]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">换届提议日期：</span><span style=\"color:#333333\">@[changeTime]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">批准建立党组织日期：</span><span style=\"color:#333333\">@[joinTime]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">党组织联系人：</span><span style=\"color:#333333\">@[contactPeople]</span></div><div style=\"line-height:30px\"><span style=\"color:#666666\">党组织书记：</span><span style=\"color:#333333\">@[secretaryPeople]</span></div>"
        }
      ]
    },
    {
      "type": "group",
      "text": "外层样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "250px"
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "ulbox",
          "default": {
            "marginTopVal": "",
            "marginRightVal": "",
            "marginBottomVal": "",
            "marginLeftVal": "",
            "paddingTopVal": "",
            "paddingRightVal": "",
            "paddingBottomVal": "",
            "paddingLeftVal": ""
          }
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "bgColor",
          "placeholder": "请选择颜色",
          "default": {
            "hex8": "#FFFFFFFF"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "渐变色",
          "desc": "背景渐变色",
          "bindKey": "bglinear",
          "default": "linear-gradient(180deg, #FFEDED 0%, #FFFFFF 50%)"
        },
        {
          "type": "uploadImage",
          "layoutType": "inline",
          "text": "背景图片",
          "bindKey": "uploadImage",
          "placeholder": "可输入图片地址或直接上传"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "图片宽",
          "bindKey": "imageWidth",
          "default": "100px"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "图片高",
          "bindKey": "imageHeight",
          "default": "100px"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "图片top",
          "desc": "图片定位top",
          "bindKey": "imageTop",
          "default": "20px"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "图片right",
          "desc": "图片定位right",
          "bindKey": "imageRight",
          "default": "20px"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "内容left",
          "desc": "内容定位left",
          "bindKey": "contentLeft",
          "default": "10px"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "内容right",
          "desc": "内容定位right",
          "bindKey": "contentRight",
          "default": "10px"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "容器阴影",
          "bindKey": "boxShadow",
          "default": "0px 0px 10px 0px #ccc"
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "boxborder"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "dataSourceSelect",
          "layoutType": "inline",
          "text": "数据源",
          "bindKey": "dataSource"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "自定义参数",
          "bindKey": "paramsFunc",
          "desc": "设置数据源自定义参数函数",
          "multiple": false
        }
      ]
    }
  ]
}