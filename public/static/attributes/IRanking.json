{
  "classId": "idm.component.mobile.iranking",
  "comName": "排行榜",
  "className": "IRanking",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
      {
        "type": "input",
        "layoutType": "inline",
        "text": "唯一标识",
        "bindKey": "ctrlId",
        "disabled": true,
        "default": "@[packageid]",
        "desc": "",
        "helpUrl": ""
      },
      {
        "type": "group",
        "text": "基本属性",
        "desc": "提供设置组件能达到展示效果的基本属性设置信息",
        "children": [
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "图片显示",
            "desc":"图片是否显示",
            "bindKey": "showImg",
            "default": true
          },
          {
            "type": "uploadImage",
            "layoutType": "inline",
            "text": "图片地址",
            "bindKey": "topImgUrl",
            "placeholder": "可输入图片地址或直接上传"
          },
          {
            "type": "inlineGroup",
            "text": "图片宽高",
            "children": [
                {
                    "type": "input",
                    "layoutType": "block",
                    "text": "图片宽",
                    "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                    "bindKey": "imgWidth",
                    "width": "100%",
                    "default": "100%"
                },
                {
                    "type": "input",
                    "layoutType": "block",
                    "text": "图片高",
                    "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                    "bindKey": "imgHeight",
                    "width": "200px",
                    "default": "200px"
                }
            ]
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "个人页签",
            "desc":"个人页签是否显示",
            "bindKey": "selfShow",
            "default": true
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "显示标题",
            "desc":"标题是否显示",
            "bindKey": "showTitle",
            "default": false
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "标题文字",
            "bindKey": "title",
            "default": "党员奖励",
            "display": "@[showTitle]"
          },
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "显示统计",
            "desc":"标题右侧显示统计排名数量",
            "bindKey": "showTitleTotal",
            "default": true,
            "display": "@[showTitle]"
          }
        ]
      },
      {
        "type": "group",
        "text": "样式设置",
        "desc": "点击？查看样式设置用法指南",
        "helpUrl": "",
        "children": [
          {
            "type": "box",
            "layoutType": "block",
            "text": "内外边距",
            "bindKey": "ulbox",
            "default": {
                "marginTopVal": "-20px",
                "marginRightVal": "20px",
                "marginBottomVal": "",
                "marginLeftVal": "20px",
                "paddingTopVal": "",
                "paddingRightVal": "",
                "paddingBottomVal": "",
                "paddingLeftVal": ""
            }
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "字体名称",
            "bindKey": "itemFontStyle",
            "default": {
                "fontColors": {
                    "hex": "#000000"
                },
                "fontSize": 20,
                "fontSizeUnit": "px"
            }
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "字体描述",
            "bindKey": "descFontStyle",
            "default": {
                "fontColors": {
                    "hex": "#000000"
                },
                "fontSize": 16,
                "fontSizeUnit": "px"
            }
          },
          {
            "type": "font",
            "layoutType": "block",
            "text": "金额字体",
            "bindKey": "moneyFontStyle",
            "default": {
                "fontColors": {
                    "hex": "#f00"
                },
                "fontSize": 16,
                "fontSizeUnit": "px"
            }
          },
          {
            "type": "border",
            "layoutType": "block",
            "text": "分割线",
            "bindKey": "border",
            "default": {
              "border": {
                "bottom": {
                  "colors": {
                    "hex": "#ccc"
                  },
                  "style": "solid",
                  "visible": true,
                  "width": 1,
                  "widthUnit": "px"
                },
                "left": {
                  "colors": {}
                },
                "right": {
                  "colors": {}
                },
                "top": {
                  "colors": {}
                }
              },
              "radius": {
                "leftBottom": {},
                "leftTop": {},
                "rightBottom": {},
                "rightTop": {}
              }
            }
          },
          {
            "type": "box",
            "layoutType": "block",
            "text": "列表边距",
            "bindKey": "libox",
            "default": {
                "marginTopVal": "",
                "marginRightVal": "20px",
                "marginBottomVal": "",
                "marginLeftVal": "20px",
                "paddingTopVal": "10px",
                "paddingRightVal": "",
                "paddingBottomVal": "10px",
                "paddingLeftVal": ""
            }
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "分割距离",
            "bindKey": "selfSlice",
            "default": "10px"
          }
        ]
      },
      {
        "type": "group",
        "text": "高级",
        "desc": "点击？查看高级设置用法指南",
        "children": [
          {
            "type": "switch",
            "layoutType": "inline",
            "text": "初次加载",
            "desc":"组件自动请求数据源获取数据",
            "bindKey": "autoInit",
            "default": true
          },
          {
            "type": "dataSourceSelect",
            "layoutType": "inline",
            "text": "数据源",
            "desc": "用于选择数据源",
            "bindKey": "dataSource"
          },
          {
            "type": "group",
            "text": "字段设置",
            "desc": "页面数据绑定",
            "children": [
              {
                "type": "dataSourceFiledSelect",
                "layoutType": "inline",
                "text": "个人页签ID",
                "bindKey": "selfInterface"
              },
              {
                "type": "dataSourceFiledSelect",
                "layoutType": "inline",
                "text": "头像字段",
                "bindKey": "ImgInterface",
                "default": "headImg"
              },
              {
                "type": "dataSourceFiledSelect",
                "layoutType": "inline",
                "text": "标题字段",
                "bindKey": "titleInterface",
                "default": "title"
              },
              {
                "type": "dataSourceFiledSelect",
                "layoutType": "inline",
                "text": "描述字段",
                "bindKey": "descInterface",
                "default": "desc"
              },
              {
                "type": "dataSourceFiledSelect",
                "layoutType": "inline",
                "text": "金额字段",
                "bindKey": "moneyInterface",
                "default": "money"
              }
            ]
          },
          {
            "type": "actionSelect",
            "layoutType": "block",
            "text": "排名内容自定义函数",
            "bindKey": "customContentFunction",
            "desc": "请返回html格式字符串，参数为{commonParam: 组件信息, customParam: 用户自定义参数, item: 条目信息}",
            "multiple": false
          }
        ]
      }
  ]
}
    