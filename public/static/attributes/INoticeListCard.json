{
  "classId": "idm.component.mobile.inoticelistcard",
  "comName": "通知公告",
  "className": "INoticeListCard",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "input",
          "layoutType": "inline",
          "text": "标题",
          "desc": "组件标题",
          "bindKey": "title",
          "default": "通知公告"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示标题",
          "desc": "是否显示标题栏",
          "bindKey": "isShowTitleBar",
          "default": "true"
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "显示图标",
          "desc": "配置是否显示标题右侧图标",
          "bindKey": "showIcon",
          "default": "true",
          "display": "@[isShowTitleBar]"
        },
        {
          "type": "inputNumber",
          "layoutType": "inline",
          "text": "默认条数1",
          "desc": "默认请求条数",
          "bindKey": "defaultNumber",
          "default": 4
        },
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "加载更多",
          "desc": "是否显示加载更多",
          "bindKey": "isShowMore",
          "default": true
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "标题右侧",
          "bindKey": "titleRightContent",
          "desc": "选择标题右侧展示内容",
          "default": "textAndIcon",
          "dictionary": [
              {
                  "label": "文字+图标",
                  "value": "textAndIcon"
              },
              {
                  "label": "文字",
                  "value": "text"
              },
              {
                  "label": "图标",
                  "value": "icon"
              },
              {
                  "label": "不显示",
                  "value": false
              }
          ]
        },
        {
          "type": "group",
          "text": "右侧图标",
          "desc": "设置标题图标属性，颜色会覆盖主题色",
          "display": "@[titleRightContent == 'text' || titleRightContent == 'textAndIcon' || titleRightContent == 'icon']",
          "helpUrl": "",
          "children": [
            {
              "type": "font",
              "layoutType": "block",
              "text": "文字字体",
              "desc": "文本颜色默认为主题色,如果设置了颜色,会覆盖主题色",
              "bindKey": "rightTitleFontStyle"
            },
            {
              "type": "iconSelect",
              "layoutType": "inline",
              "text": "选择图标",
              "bindKey": "rightTitleIcon",
              "default": ""
            },
            {
                "type": "colorPicker",
                "layoutType": "inline",
                "desc": "设置图标颜色，会覆盖主题色",
                "text": "图标颜色",
                "bindKey": "rightTitleIconFontColor",
                "default": {}
            },
            {
                "type": "inputNumber",
                "layoutType": "inline",
                "text": "图标大小",
                "bindKey": "rightTitleIconFontSize",
                "default": 18
            },
            {
                "type": "box",
                "layoutType": "block",
                "text": "内外边距",
                "bindKey": "rightIconBox",
                "default": {
                    "marginTopVal": "",
                    "marginRightVal": "",
                    "marginBottomVal": "",
                    "marginLeftVal": "4px",
                    "paddingTopVal": "",
                    "paddingRightVal": "",
                    "paddingBottomVal": "",
                    "paddingLeftVal": ""
                }
            }
          ]
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "更多跳转",
          "display": "@[titleRightContent]",
          "bindKey": "jumpStyle",
          "desc": "设置点击更多跳转方式",
          "dictionary": [
              {
                  "label": "子页面打开",
                  "value": "_child"
              },
              {
                  "label": "接口链接打开",
                  "value": "_link"
              },
              {
                  "label": "自定义链接",
                  "value": "_custom_link"
              },
              {
                  "label": "自定义函数",
                  "value": "_custom_func"
              }
          ],
          "default": "_link"
        },
        {
          "type": "pageSelect",
          "layoutType": "inline",
          "text": "更多页面",
          "display": "@[jumpStyle === '_child']",
          "bindKey": "morePageList",
          "desc": "选择要打开的子页面"
        },
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "是否缓存",
          "display": "@[jumpStyle === '_child']",
          "bindKey": "isMoreKeep",
          "desc": "点击更多跳转子页面时，是否缓存本页面",
          "default": true,
          "dictionary": [
              {
                  "label": "是",
                  "value": true
              },
              {
                  "label": "否",
                  "value": false
              }
          ]
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "更多链接",
          "desc": "自定义更多链接",
          "defaultValRegExp": false,
          "display": "@[jumpStyle === '_custom_link']",
          "bindKey": "customMoreLink"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "自定义更多跳转函数",
          "display": "@[jumpStyle === '_custom_func']",
          "bindKey": "jumpMoreCustomFunc",
          "multiple": false
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "为空描述",
          "bindKey": "emptyDescription",
          "desc": "内容为空的时候描述文字提示",
          "default": "暂无数据",
          "placeholder": "示例：暂无数据"
        },
        {
          "type": "pageSelect",
          "layoutType": "inline",
          "text": "详情跳转",
          "bindKey": "replyJump",
          "desc": "公告详情跳转页面"
        },
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "是否缓存",
          "bindKey": "isPageKeep",
          "desc": "跳转公告详情页面时，是否缓存本页面",
          "default": true,
          "dictionary": [
              {
                  "label": "是",
                  "value": true
              },
              {
                  "label": "否",
                  "value": false
              }
          ]
        },
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "默认状态",
          "bindKey": "defaultStatus",
          "dictionary": [
            {
              "label": "普通",
              "value": "default"
            },
            {
              "label": "隐藏",
              "value": "hidden"
            }
          ],
          "default": "default"
        }
      ]
    },
    {
      "type": "group",
      "text": "标题容器样式",
      "desc": "点击？查看样式设置用法指南",
      "display": "@[isShowTitleBar]",
      "helpUrl": "",
      "children": [
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "图标位置",
          "desc": "设置组件标题图标位置",
          "bindKey": "titleIconPosition",
          "display": "@[showIcon]",
          "dictionary": [
            {
              "label": "左边",
              "value": "left"
            },
            {
              "label": "右边",
              "value": "right"
            }
          ],
          "default": "left"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "标题文字",
          "desc": "标题文字样式设置",
          "bindKey": "titleFont"
        }
      ]
    },
    {
      "type": "group",
      "text": "外层卡片样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "box"
        },
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "auto"
            }
          ]
        },
        {
          "type": "group",
          "text": "背景设置",
          "desc": "点击？查看背景设置用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "背景色",
              "bindKey": "bgColor",
              "placeholder": "请选择颜色",
              "default": {
                "hex8": "#FFFFFFFF"
              }
            },
            {
              "type": "uploadImage",
              "layoutType": "inline",
              "text": "背景图片",
              "bindKey": "bgImgUrl",
              "placeholder": "可输入图片地址或直接上传"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "横向偏移",
              "bindKey": "positionX",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "纵向偏移",
              "bindKey": "positionY",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "背景大小",
              "bindKey": "bgSize",
              "dictionary": [
                {
                  "label": "裁切显示",
                  "value": "cover"
                },
                {
                  "label": "完全显示",
                  "value": "contain"
                },
                {
                  "label": "自定义",
                  "value": "custom"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "宽度",
              "bindKey": "bgSizeWidth",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "高度",
              "bindKey": "bgSizeHeight",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "平铺模式",
              "bindKey": "bgRepeat",
              "dictionary": [
                {
                  "label": "双向重复",
                  "value": "repeat"
                },
                {
                  "label": "水平重复",
                  "value": "repeat-x"
                },
                {
                  "label": "垂直重复",
                  "value": "repeat-y"
                },
                {
                  "label": "不重复",
                  "value": "no-repeat"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "inline",
              "text": "背景模式",
              "bindKey": "bgAttachment",
              "dictionary": [
                {
                  "label": "固定",
                  "value": "fixed"
                },
                {
                  "label": "滚动",
                  "value": "scroll"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            }
          ]
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "border"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "边框阴影",
          "bindKey": "boxShadow"
        }
      ]
    },
    {
      "type": "group",
      "text": "内层卡片样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "innerBox"
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "innerBgColor",
          "placeholder": "请选择颜色",
          "default": {
            "hex8": "#FFFFFFFF"
          }
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "innerBorder"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "边框阴影",
          "bindKey": "innerboxShadow"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "文字",
          "bindKey": "font"
        }
      ]
    },
    {
      "type": "table",
      "text": "主题设置",
      "desc": "点击？查看主题设置用法指南",
      "bindKey": "themeList",
      "tabText": "主题[index]",
      "default": [
        {
          "key": "blue",
          "mainColor": {
            "hex": "#0073CA",
            "hex8": "#0073CAFF"
          }
        },
        {
          "key": "red",
          "mainColor": {
            "hex": "#E21A1A",
            "hex8": "#E21A1AFF"
          }
        },
        {
          "key": "green",
          "mainColor": {
            "hex": "#0EAF64",
            "hex8": "#0EAF64FF"
          }
        }
      ],
      "children": [
        {
          "type": "select",
          "layoutType": "inline",
          "text": "主题标识",
          "bindKey": "key",
          "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
          "default": "",
          "placeholder": "例如：blue",
          "ctrlAttrObject": {
            "mode": "combobox"
          },
          "dictionary": [
            {
              "label": "blue",
              "value": "blue"
            },
            {
              "label": "red",
              "value": "red"
            },
            {
              "label": "green",
              "value": "green"
            }
          ]
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "主要颜色",
          "bindKey": "mainColor",
          "desc": "主题的主要颜色",
          "placeholder": "请选择颜色",
          "display": "@[key]"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "group",
          "text": "适配设置",
          "desc": "通过设置属性来适配移动端页面尺寸",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "基准值",
              "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
              "bindKey": "baseValue",
              "default": "414"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "适配比例",
              "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
              "bindKey": "adaptationRatio",
              "default": "1.2"
            }
          ]
        },
        {
          "type": "dataSourceSelect",
          "layoutType": "inline",
          "text": "数据源",
          "desc": "用于选择的数据源",
          "bindKey": "dataSource",
          "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup"
        },
        {
          "type": "group",
          "text": "字段设置",
          "desc": "页面数据绑定",
          "children": [
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "通知列表",
              "desc": "通知公告通知列表字段",
              "bindKey": "listInterface",
              "default": "list"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "日期",
              "desc": "日期格式:2022-08-08",
              "bindKey": "dateInterface",
              "default": "date"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "公告标题",
              "bindKey": "btInterface",
              "default": "bt"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "更多链接",
              "bindKey": "moreUrl",
              "default": "moreUrl"
            }
          ]
        },
        {
            "type": "select",
            "layoutType": "inline",
            "text": "刷新KEY",
            "bindKey": "messageRefreshKey",
            "desc": "根据组件接收到的消息KEY来刷新数据",
            "default": "",
            "multiple": true,
            "placeholder": "示例：inbox,info",
            "ctrlAttrObject": {
                "mode": "tags"
            },
            "dictionary": [
                {
                    "label": "inbox",
                    "value": "inbox"
                },
                {
                    "label": "info",
                    "value": "info"
                }
            ]
        }
      ]
    }
  ]
}