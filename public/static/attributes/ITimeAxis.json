{
  "classId": "idm.component.mobile.itimeaxis",
  "comName": "时间轴",
  "className": "ITimeAxis",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "textarea",
          "layoutType": "inline",
          "text": "为空描述",
          "bindKey": "emptyDescription",
          "desc": "内容为空的时候描述文字提示",
          "default": "暂无数据",
          "placeholder": "示例：暂无数据"
        },
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "默认状态",
          "bindKey": "defaultStatus",
          "dictionary": [
            {
              "label": "普通",
              "value": "default"
            },
            {
              "label": "隐藏",
              "value": "hidden"
            }
          ],
          "default": "default"
        }
      ]
    },
    {
      "type": "group",
      "text": "内容设置",
      "desc": "设置时间轴相关内容",
      "children": [
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "圆点样式",
          "bindKey": "circleStyle",
          "desc": "设置一级节点圆点的样式，可选：实心，空心",
          "dictionary": [
            {
              "label": "实心",
              "value": "solid"
            },
            {
              "label": "空心",
              "value": "hollow"
            }
          ],
          "default": "solid"
        },
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "圆点位置",
          "bindKey": "circlePostion",
          "desc": "设置圆点的位置",
          "dictionary": [
            {
              "label": "居上",
              "value": "top"
            },
            {
              "label": "居中",
              "value": "center"
            },
            {
              "label": "局下",
              "value": "bottom"
            }
          ],
          "default": "center"
        },
        {
          "type": "radio",
          "layoutType": "inline",
          "text": "分割线",
          "bindKey": "connectLine",
          "desc": "设置节点连接线的样式，可选：实线，虚线，点线",
          "dictionary": [
            {
              "label": "实线",
              "value": "solid"
            },
            {
              "label": "虚线",
              "value": "dashed"
            },
            {
              "label": "点线",
              "value": "dotted"
            }
          ],
          "default": "solid"
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "卡片背景",
          "bindKey": "cardbgColor",
          "desc": "右侧卡片背景颜色",
          "placeholder": "请选择颜色",
          "default": {
            "hex8": "#F8f8F8FF"
          }
        }
      ]
    },
    {
      "type": "group",
      "text": "样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "box",
          "default": {
            "marginTopVal": "8px",
            "marginRightVal": "8px",
            "marginBottomVal": "8px",
            "marginLeftVal": "8px",
            "paddingTopVal": "16px",
            "paddingRightVal": "16px",
            "paddingBottomVal": "16px",
            "paddingLeftVal": "16px"
          }
        },
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "auto"
            }
          ]
        },
        {
          "type": "group",
          "text": "背景设置",
          "desc": "点击？查看背景设置用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "背景色",
              "bindKey": "bgColor",
              "placeholder": "请选择颜色",
              "default": {
                "hex8": "#FFFFFFFF"
              }
            },
            {
              "type": "uploadImage",
              "layoutType": "inline",
              "text": "背景图片",
              "bindKey": "bgImgUrl",
              "placeholder": "可输入图片地址或直接上传"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "横向偏移",
              "bindKey": "positionX",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "纵向偏移",
              "bindKey": "positionY",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "背景大小",
              "bindKey": "bgSize",
              "dictionary": [
                {
                  "label": "裁切显示",
                  "value": "cover"
                },
                {
                  "label": "完全显示",
                  "value": "contain"
                },
                {
                  "label": "自定义",
                  "value": "custom"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "宽度",
              "bindKey": "bgSizeWidth",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "高度",
              "bindKey": "bgSizeHeight",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "平铺模式",
              "bindKey": "bgRepeat",
              "dictionary": [
                {
                  "label": "双向重复",
                  "value": "repeat"
                },
                {
                  "label": "水平重复",
                  "value": "repeat-x"
                },
                {
                  "label": "垂直重复",
                  "value": "repeat-y"
                },
                {
                  "label": "不重复",
                  "value": "no-repeat"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "inline",
              "text": "背景模式",
              "bindKey": "bgAttachment",
              "dictionary": [
                {
                  "label": "固定",
                  "value": "fixed"
                },
                {
                  "label": "滚动",
                  "value": "scroll"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            }
          ]
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "border"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "边框阴影",
          "bindKey": "boxShadow",
          "default": "0px 2px 12px 0px rgba(0, 0, 0, 0.07)"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "文字",
          "bindKey": "font"
        }
      ]
    },
    {
      "type": "table",
      "text": "主题设置",
      "desc": "点击？查看主题设置用法指南",
      "bindKey": "themeList",
      "tabText": "主题[index]",
      "default": [
        {
          "key": "blue",
          "mainColor": {
            "hex": "#0073CA",
            "hex8": "#0073CAFF"
          }
        },
        {
          "key": "red",
          "mainColor": {
            "hex": "#E21A1A",
            "hex8": "#E21A1AFF"
          }
        },
        {
          "key": "green",
          "mainColor": {
            "hex": "#0EAF64",
            "hex8": "#0EAF64FF"
          }
        }
      ],
      "children": [
        {
          "type": "select",
          "layoutType": "inline",
          "text": "主题标识",
          "bindKey": "key",
          "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
          "default": "",
          "placeholder": "例如：blue",
          "ctrlAttrObject": {
            "mode": "combobox"
          },
          "dictionary": [
            {
              "label": "blue",
              "value": "blue"
            },
            {
              "label": "red",
              "value": "red"
            },
            {
              "label": "green",
              "value": "green"
            }
          ]
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "主要颜色",
          "bindKey": "mainColor",
          "desc": "主题的主要颜色",
          "placeholder": "请选择颜色",
          "display": "@[key]"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "group",
          "text": "适配设置",
          "desc": "通过设置属性来适配移动端页面尺寸",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "基准值",
              "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
              "bindKey": "baseValue",
              "default": "414"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "适配比例",
              "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
              "bindKey": "adaptationRatio",
              "default": "1.2"
            }
          ]
        },
        {
          "type": "dataSourceSelect",
          "layoutType": "inline",
          "text": "数据源",
          "desc": "用于选择时间轴的数据源",
          "bindKey": "dataSource",
          "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "参数自定义函数",
          "bindKey": "paramsMakeFunction",
          "desc": "用于请求数据源时，对请求参数进行处理，返回处理后的参数",
          "multiple": false
        },
        {
          "type": "group",
          "text": "字段设置",
          "desc": "页面数据绑定",
          "children": [
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "日期",
              "bindKey": "labelInterface",
              "default": "label"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "标题",
              "bindKey": "titleInterface",
              "default": "title"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "描述",
              "bindKey": "descInterface",
              "default": "desc"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "图标路径",
              "bindKey": "iconInterface",
              "default": "icon"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "图标描述",
              "bindKey": "iconTextInterface",
              "default": "iconText"
            }
          ]
        },
        {
            "type": "select",
            "layoutType": "inline",
            "text": "刷新KEY",
            "bindKey": "messageRefreshKey",
            "desc": "根据组件接收到的消息KEY来刷新数据",
            "default": "",
            "multiple": true,
            "placeholder": "示例：inbox,info",
            "ctrlAttrObject": {
                "mode": "tags"
            },
            "dictionary": [
                {
                    "label": "inbox",
                    "value": "inbox"
                },
                {
                    "label": "info",
                    "value": "info"
                }
            ]
        }
      ]
    }
  ]
}
