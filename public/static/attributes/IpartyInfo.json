{
  "classId": "idm.component.mobile.ipartyInfo",
  "comName": "党员信息",
  "className": "IpartyInfo",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "头像显示",
          "desc": "头像是否显示",
          "bindKey": "isHead",
          "default": true
        },
        {
          "type": "uploadImage",
          "layoutType": "inline",
          "text": "头像",
          "bindKey": "uploadImage",
          "placeholder": "可输入图片地址或直接上传",
          "display": "@[isHead]"
        },
        {
          "type": "textarea",
          "layoutType": "inline",
          "text": "内容文本",
          "bindKey": "contextText",
          "defaultValRegExp": false,
          "desc": "可用文本表达式配置",
          "default": "<div style=\"color:#fff;padding-bottom:5px;\">性别：@[sex]</div><div style=\"color:#fff;padding-bottom:5px;\">民族：@[nation]</div><div style=\"color:#fff;padding-bottom:5px;\">学历：@[education]</div><div style=\"color:#fff;padding-bottom:5px;\">出生年月：@[year]</div><div style=\"color:#fff;padding-bottom:5px;\">所在组织：@[organition]</div>"
        }
      ]
    },
    {
      "type": "group",
      "text": "内层样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "input",
          "layoutType": "block",
          "text": "头像宽",
          "desc": "使用px、%、vw等单位",
          "bindKey": "auWdith",
          "default": "60px",
          "display": "@[isHead]"
        },
        {
          "type": "input",
          "layoutType": "block",
          "text": "头像高",
          "desc": "使用px、%、vw等单位",
          "bindKey": "auHeight",
          "default": "60px",
          "display": "@[isHead]"
        },
        {
          "type": "input",
          "layoutType": "block",
          "text": "头像top",
          "desc": "头像定位距离top, 使用px、%、vw等单位",
          "bindKey": "auTop",
          "default": "10px",
          "display": "@[isHead]"
        },
        {
          "type": "input",
          "layoutType": "block",
          "text": "头像right",
          "desc": "头像定位距离right, 使用px、%、vw等单位",
          "bindKey": "auRight",
          "default": "20px",
          "display": "@[isHead]"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "名称样式",
          "bindKey": "nameFont",
          "display": "@[isHead]"
        },
        {
          "type": "input",
          "layoutType": "block",
          "text": "名称距离",
          "desc": "名称距离上边，使用px、%、vw等单位",
          "bindKey": "nameTop",
          "default": "5px",
          "display": "@[isHead]"
        }
      ]
    },
    {
      "type": "group",
      "text": "外层样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "auto"
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "ulbox",
          "default": {
            "marginTopVal": "",
            "marginRightVal": "",
            "marginBottomVal": "",
            "marginLeftVal": "",
            "paddingTopVal": "10px",
            "paddingRightVal": "",
            "paddingBottomVal": "20px",
            "paddingLeftVal": "20px"
          }
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "bgColor",
          "placeholder": "请选择颜色",
          "default": {
            "hex8": "#CD0502FF"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "渐变色",
          "desc": "背景渐变色",
          "bindKey": "bglinear",
          "default": ""
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "容器阴影",
          "bindKey": "boxShadow",
          "default": "0px 0px 10px 0px #ccc"
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "boxborder"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "dataSourceSelect",
          "layoutType": "inline",
          "text": "信息数据源",
          "bindKey": "dataSource"
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "头像接口",
          "desc": "头像接口+fileName",
          "bindKey": "imgdataSource",
          "default": ""
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "自定义参数",
          "bindKey": "paramsFunc",
          "desc": "设置数据源自定义参数函数，只适用信息数据源",
          "multiple": false
        },
        {
          "type": "group",
          "text": "字段设置",
          "desc": "页面数据绑定",
          "children": [
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "头像",
              "bindKey": "headField",
              "default": "head"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "名称",
              "bindKey": "nameField",
              "default": "name"
            }
          ]
        }
      ]
    }
  ]
}