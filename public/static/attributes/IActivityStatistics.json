{
  "classId": "idm.component.mobile.iactivityStatistics",
  "comName": "学习内容卡片",
  "className": "IActivityStatistics",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "input",
          "layoutType": "inline",
          "text": "标题",
          "bindKey": "headText",
          "default": "党费缴纳"
        },
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "卡片标题",
          "bindKey": "isShowHeader",
          "desc": "设置是否该列表卡片的标题",
          "default": true,
          "dictionary": [
            {
              "label": "显示",
              "value": true
            },
            {
              "label": "隐藏",
              "value": false
            }
          ]
        },
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "金钱图标",
          "bindKey": "isShowMoney",
          "desc": "设置是否显示列表每一项右上角金钱图标",
          "default": true,
          "dictionary": [
            {
              "label": "显示",
              "value": true
            },
            {
              "label": "隐藏",
              "value": false
            }
          ]
        },
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "底部文字",
          "bindKey": "isShowBottomText",
          "desc": "设置是否显示列表每一项下方文字",
          "default": true,
          "dictionary": [
            {
              "label": "显示",
              "value": true
            },
            {
              "label": "隐藏",
              "value": false
            }
          ]
        },
        {
          "type": "radio",
          "styleType": "radio",
          "layoutType": "inline",
          "text": "间隔线",
          "bindKey": "isShowLine",
          "desc": "设置是否显示列表中的间隔线",
          "default": true,
          "dictionary": [
            {
              "label": "显示",
              "value": true
            },
            {
              "label": "隐藏",
              "value": false
            }
          ]
        }
      ]
    },
    {
      "type": "group",
      "text": "样式设置",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "100%"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "100%"
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "box",
          "default": {
            "marginTopVal": "16px",
            "marginRightVal": "10px",
            "marginBottomVal": "16px",
            "marginLeftVal": "10px",
            "paddingTopVal": "0",
            "paddingRightVal": "12px",
            "paddingBottomVal": "0",
            "paddingLeftVal": "12px"
          }
        },
        {
          "type": "group",
          "text": "背景设置",
          "desc": "点击？查看背景设置用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "text": "背景色",
              "bindKey": "bgColor",
              "placeholder": "请选择颜色",
              "default": {
                "hex8": "#FFFFFFFF"
              }
            },
            {
              "type": "uploadImage",
              "layoutType": "inline",
              "text": "背景图片",
              "bindKey": "bgImgUrl",
              "placeholder": "可输入图片地址或直接上传"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "横向偏移",
              "bindKey": "positionX",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "纵向偏移",
              "bindKey": "positionY",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "背景大小",
              "bindKey": "bgSize",
              "dictionary": [
                {
                  "label": "裁切显示",
                  "value": "cover"
                },
                {
                  "label": "完全显示",
                  "value": "contain"
                },
                {
                  "label": "自定义",
                  "value": "custom"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "宽度",
              "bindKey": "bgSizeWidth",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "inputNumberUnit",
              "layoutType": "inline",
              "text": "高度",
              "bindKey": "bgSizeHeight",
              "dictionary": [
                {
                  "label": "px",
                  "value": "px"
                },
                {
                  "label": "%",
                  "value": "%"
                },
                {
                  "label": "em",
                  "value": "em"
                }
              ],
              "display": "@[bgSize=='custom']"
            },
            {
              "type": "radio",
              "layoutType": "block",
              "text": "平铺模式",
              "bindKey": "bgRepeat",
              "dictionary": [
                {
                  "label": "双向重复",
                  "value": "repeat"
                },
                {
                  "label": "水平重复",
                  "value": "repeat-x"
                },
                {
                  "label": "垂直重复",
                  "value": "repeat-y"
                },
                {
                  "label": "不重复",
                  "value": "no-repeat"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            },
            {
              "type": "radio",
              "layoutType": "inline",
              "text": "背景模式",
              "bindKey": "bgAttachment",
              "dictionary": [
                {
                  "label": "固定",
                  "value": "fixed"
                },
                {
                  "label": "滚动",
                  "value": "scroll"
                },
                {
                  "label": "继承",
                  "value": "inherit"
                }
              ],
              "display": "@[bgImgUrl]"
            }
          ]
        },
        {
          "type": "group",
          "text": "容器边框",
          "desc": "点击？查看背景设置用法指南",
          "helpUrl": "",
          "children": [
            {
              "type": "border",
              "layoutType": "block",
              "text": "边框",
              "bindKey": "border",
              "default": {
                "border": {
                  "top": {
                    "style": "solid",
                    "width": 1,
                    "widthUnit": "px",
                    "colors": {
                      "rgba": {
                        "r": 243,
                        "g": 243,
                        "b": 243,
                        "a": 1
                      }
                    }
                  },
                  "right": {
                    "style": "solid",
                    "width": 1,
                    "widthUnit": "px",
                    "colors": {
                      "rgba": {
                        "r": 243,
                        "g": 243,
                        "b": 243,
                        "a": 1
                      }
                    }
                  },
                  "bottom": {
                    "style": "solid",
                    "width": 1,
                    "widthUnit": "px",
                    "colors": {
                      "rgba": {
                        "r": 243,
                        "g": 243,
                        "b": 243,
                        "a": 1
                      }
                    }
                  },
                  "left": {
                    "style": "solid",
                    "width": 1,
                    "widthUnit": "px",
                    "colors": {
                      "rgba": {
                        "r": 243,
                        "g": 243,
                        "b": 243,
                        "a": 1
                      }
                    }
                  }
                },
                "radius": {
                  "leftTop": {
                    "radius": 6,
                    "radiusUnit": "px"
                  },
                  "rightTop": {
                    "radius": 6,
                    "radiusUnit": "px"
                  },
                  "leftBottom": {
                    "radius": 6,
                    "radiusUnit": "px"
                  },
                  "rightBottom": {
                    "radius": 6,
                    "radiusUnit": "px"
                  }
                }
              }
            }
          ]
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "边框阴影",
          "bindKey": "boxShadow",
          "default": "0px 2px 12px 0px rgba(0, 0, 0, 0.07)"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "左上文字",
          "desc": "修改列表中每一项右上方文字样式",
          "bindKey": "activityNameFont"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "右上文字",
          "desc": "修改列表中每一项右上方文字样式",
          "bindKey": "activityConveneFont"
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "下方文字",
          "bindKey": "bottomFont"
        }
      ]
    },
    {
      "type": "table",
      "text": "主题设置",
      "desc": "点击？查看主题设置用法指南",
      "bindKey": "themeList",
      "tabText": "主题[index]",
      "default": [
        {
          "key": "blue",
          "mainColor": {
            "hex": "#0073CA",
            "hex8": "#0073CAFF"
          }
        },
        {
          "key": "red",
          "mainColor": {
            "hex": "#E21A1A",
            "hex8": "#E21A1AFF"
          }
        },
        {
          "key": "green",
          "mainColor": {
            "hex": "#0EAF64",
            "hex8": "#0EAF64FF"
          }
        }
      ],
      "children": [
        {
          "type": "select",
          "layoutType": "inline",
          "text": "主题标识",
          "bindKey": "key",
          "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
          "default": "",
          "placeholder": "例如：blue",
          "ctrlAttrObject": {
            "mode": "combobox"
          },
          "dictionary": [
            {
              "label": "blue",
              "value": "blue"
            },
            {
              "label": "red",
              "value": "red"
            },
            {
              "label": "green",
              "value": "green"
            }
          ]
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "主要颜色",
          "bindKey": "mainColor",
          "desc": "主题的主要颜色",
          "placeholder": "请选择颜色",
          "display": "@[key]"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "group",
          "text": "适配设置",
          "desc": "通过设置属性来适配移动端页面尺寸",
          "children": [
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "基准值",
              "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
              "bindKey": "baseValue",
              "default": "414"
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "适配比例",
              "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
              "bindKey": "adaptationRatio",
              "default": "1.2"
            }
          ]
        },
        {
          "type": "treeSelect",
          "layoutType": "inline",
          "text": "数据源",
          "desc": "用于选择视频的数据源",
          "bindKey": "dataSource",
          "dataSourceUrl": "ctrl/dataSource/getDatasourceByGroup"
        },
        {
          "type": "group",
          "text": "字段设置",
          "desc": "设置从列表项中展示的对应字段",
          "children": [
            {
              "type": "textarea",
              "layoutType": "inline",
              "text": "显示字段",
              "bindKey": "dataFiled",
              "desc": "根据接口返回数据格式指定结果集的字段，比如结果集名为resultData（自定义接口忽略）且它的值为{code:\"200\",data:{value:[{\"date\":\"2022-05-12\"}]}}，则这里应该填写data",
              "default": "data",
              "placeholder": "示例：data 或者 [0].data[0]"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "图标字段",
              "desc": "每个活动的图标显示字段",
              "bindKey": "activityIcon",
              "default": "icon"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "活动名称",
              "desc": "每个活动的名称显示字段",
              "bindKey": "activityName",
              "default": "name"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "参与人数",
              "desc": "每个活动的累计参与人次字段",
              "bindKey": "activityPersonNum",
              "display": "@[isShowBottomText]",
              "default": "personNum"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "召开次数",
              "desc": "每个活动的召开次数字段",
              "bindKey": "activityConvene",
              "default": "convene"
            },
            {
              "type": "input",
              "layoutType": "inline",
              "text": "出席率",
              "desc": "每个活动的出席率字段",
              "display": "@[isShowBottomText]",
              "bindKey": "activityAttendance",
              "default": "attendance"
            }
          ]
        },
        {
          "type": "select",
          "layoutType": "inline",
          "text": "刷新KEY",
          "bindKey": "messageRefreshKey",
          "desc": "根据组件接收到的消息KEY来刷新数据",
          "default": "",
          "multiple": true,
          "placeholder": "示例：inbox,info",
          "ctrlAttrObject": {
            "mode": "tags"
          },
          "dictionary": [
            {
              "label": "inbox",
              "value": "inbox"
            },
            {
              "label": "info",
              "value": "info"
            }
          ]
        }
      ]
    }
  ]
}