{
  "classId": "idm.component.mobile.iprogressCourse",
  "comName": "发展过程",
  "className": "IprogressCourse",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
    {
      "type": "input",
      "layoutType": "inline",
      "text": "唯一标识",
      "bindKey": "ctrlId",
      "disabled": true,
      "default": "@[packageid]",
      "desc": "",
      "helpUrl": ""
    },
    {
      "type": "group",
      "text": "基本属性",
      "desc": "提供设置组件能达到展示效果的基本属性设置信息",
      "children": [
        {
          "type": "switch",
          "layoutType": "inline",
          "text": "标题显示",
          "desc": "标题是否显示",
          "bindKey": "isTitleShow",
          "default": true
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "标题",
          "bindKey": "title",
          "default": "发展过程",
          "display": "@[isTitleShow]"
        },
        {
          "type": "group",
          "text": "左侧图标",
          "desc": "设置标题图标属性，颜色会覆盖主题色",
          "children": [
            {
              "type": "iconSelect",
              "layoutType": "inline",
              "text": "选择图标",
              "bindKey": "titleIcon",
              "default": ""
            },
            {
              "type": "colorPicker",
              "layoutType": "inline",
              "desc": "设置图标颜色，会覆盖主题色",
              "text": "图标颜色",
              "bindKey": "titleIconFontColor",
              "default": {}
            },
            {
              "type": "inputNumber",
              "layoutType": "inline",
              "text": "图标大小",
              "bindKey": "titleIconFontSize",
              "default": 18
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "标题边距",
          "bindKey": "leftIconBox",
          "default": {
            "marginTopVal": "",
            "marginRightVal": "",
            "marginBottomVal": "",
            "marginLeftVal": "",
            "paddingTopVal": "",
            "paddingRightVal": "",
            "paddingBottomVal": "",
            "paddingLeftVal": ""
          }
        },
        {
          "type": "font",
          "layoutType": "block",
          "text": "标题字体",
          "bindKey": "titleFont"
        }
      ]
    },
    {
      "type": "group",
      "text": "单项样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "itemWidth",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "itemHeight",
              "width": "60px",
              "default": "250px"
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "itemBox",
          "default": {
            "marginTopVal": "",
            "marginRightVal": "",
            "marginBottomVal": "",
            "marginLeftVal": "",
            "paddingTopVal": "10px",
            "paddingRightVal": "20px",
            "paddingBottomVal": "10px",
            "paddingLeftVal": "20px"
          }
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "itemBgcolor",
          "placeholder": "请选择颜色",
          "default": {
            "hex8": "#FFFFFFFF"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "容器阴影",
          "bindKey": "itemboxShadow",
          "default": "0px 0px 10px 0px #ccc"
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "itemboxborder"
        }
      ]
    },
    {
      "type": "group",
      "text": "外层样式",
      "desc": "点击？查看样式设置用法指南",
      "helpUrl": "",
      "children": [
        {
          "type": "inlineGroup",
          "text": "宽高",
          "children": [
            {
              "type": "input",
              "layoutType": "block",
              "text": "宽",
              "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
              "bindKey": "width",
              "width": "60px",
              "default": "auto"
            },
            {
              "type": "input",
              "layoutType": "block",
              "text": "高",
              "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
              "bindKey": "height",
              "width": "60px",
              "default": "250px"
            }
          ]
        },
        {
          "type": "box",
          "layoutType": "block",
          "text": "内外边距",
          "bindKey": "ulbox",
          "default": {
            "marginTopVal": "",
            "marginRightVal": "",
            "marginBottomVal": "",
            "marginLeftVal": "",
            "paddingTopVal": "10px",
            "paddingRightVal": "10px",
            "paddingBottomVal": "10px",
            "paddingLeftVal": "10px"
          }
        },
        {
          "type": "colorPicker",
          "layoutType": "inline",
          "text": "背景色",
          "bindKey": "bgColor",
          "placeholder": "请选择颜色",
          "default": {
            "hex8": "#FFFFFFFF"
          }
        },
        {
          "type": "input",
          "layoutType": "inline",
          "text": "容器阴影",
          "bindKey": "boxShadow",
          "default": "0px 0px 10px 0px #ccc"
        },
        {
          "type": "border",
          "layoutType": "block",
          "text": "边框",
          "bindKey": "boxborder"
        }
      ]
    },
    {
      "type": "group",
      "text": "高级",
      "desc": "点击？查看高级设置用法指南",
      "children": [
        {
          "type": "dataSourceSelect",
          "layoutType": "inline",
          "text": "数据源",
          "bindKey": "dataSource"
        },
        {
          "type": "actionSelect",
          "layoutType": "block",
          "text": "自定义参数",
          "bindKey": "paramsFunc",
          "desc": "设置数据源自定义参数函数",
          "multiple": false
        },
        {
          "type": "group",
          "text": "字段设置",
          "desc": "页面数据绑定",
          "children": [
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "头像",
              "bindKey": "headField",
              "default": "head"
            },
            {
              "type": "dataSourceFiledSelect",
              "layoutType": "inline",
              "text": "名称",
              "bindKey": "nameField",
              "default": "name"
            }
          ]
        }
      ]
    }
  ]
}