{
    "classId": "idm.component.mobile.ibanner",
    "comName": "轮播图",
    "className": "IBanner",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "标题",
                    "bindKey": "title",
                    "default": "轮播图",
                    "display": "@[false]"
                },
                {
                    "type": "switch",
                    "layoutType": "inline",
                    "text": "显示方块",
                    "bindKey": "showBullet",
                    "desc": "配置轮播分页器方块显示",
                    "default": true
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "自动播放",
                    "bindKey": "autoplay",
                    "desc": "设置点击轮播图片数据模式",
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ],
                    "default": true
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "停留时间",
                    "bindKey": "delay",
                    "desc": "自动播放停留时间，单位：毫秒",
                    "default": 3000,
                    "display": "@[autoplay == true]"
                },
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置点击轮播图片时跳转方式, 链接打开时使用window.open配置的数据源链接",
                    "dictionary": [
                        {
                            "label": "子页面打开",
                            "value": "_child"
                        },
                        {
                            "label": "链接打开",
                            "value": "_link"
                        }
                    ],
                    "default": "_link"
                },
                {
                    "type": "pageSelect",
                    "layoutType": "inline",
                    "text": "跳转页面",
                    "display": "@[jumpStyle === '_child']",
                    "bindKey": "pageList",
                    "desc": "选择要打开的子页面"
                },
                {
                    "type": "slider",
                    "layoutType": "block",
                    "text": "显示数量",
                    "desc": "设置显示轮播图片数量，自定义配置轮播时失效",
                    "bindKey": "limit",
                    "default": 3,
                    "display": "@[dataType === 'dataSource']"
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "大屏高度",
                    "desc": "图片高度建议设置为：86-（图片高度/图片宽度*100），单位选择vw即可实现轮播图宽高比例同比放大",
                    "bindKey": "maxHeight",
                    "width": "60px",
                    "default": {
                        "inputVal": 32,
                        "selectVal": "vw"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "vh",
                            "value": "vh"
                        },
                        {
                            "label": "vw",
                            "value": "vw"
                        }
                    ]
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "小屏高度",
                    "desc": "用于设置再大于分界点的设备显示的轮播高度",
                    "bindKey": "height",
                    "width": "60px",
                    "default": {
                        "inputVal": 180,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "vh",
                            "value": "vh"
                        },
                        {
                            "label": "vw",
                            "value": "vw"
                        }
                    ]
                },
                {
                    "type": "inputNumber",
                    "layoutType": "inline",
                    "text": "分界点",
                    "bindKey": "dividingPoint",
                    "desc": "宽度分界点，用于决定当前轮播图的高度，如果屏幕小于分界点则使用小屏高度的值，反之会使用大屏高度的值",
                    "default": 800
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "图片圆角",
                    "bindKey": "imgBorderRadius",
                    "default": {
                        "inputVal": 8,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        }
                    ]
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "上外边距",
                    "bindKey": "marginTop",
                    "default": {
                        "inputVal": 10,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        }
                    ]
                },
                {
                    "type": "inputNumberUnit",
                    "layoutType": "inline",
                    "text": "下外边距",
                    "bindKey": "marginBottom",
                    "default": {
                        "inputVal": 5,
                        "selectVal": "px"
                    },
                    "dictionary": [
                        {
                            "label": "px",
                            "value": "px"
                        },
                        {
                            "label": "%",
                            "value": "%"
                        },
                        {
                            "label": "em",
                            "value": "em"
                        }
                    ]
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default":[
                {
                    "key":"blue",
                    "mainColor":{
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key":"red",
                    "mainColor":{
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key":"green",
                    "mainColor":{
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc":"用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default":"",
                    "placeholder":"例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },{
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc":"主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display":"@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "group",
                    "text": "适配设置",
                    "desc":"通过设置属性来适配移动端页面尺寸",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "基准值",
                            "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
                            "bindKey": "baseSize",
                            "default": 414
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "适配比例",
                            "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
                            "bindKey": "adaptationRatio",
                            "default": 1.2
                        }
                    ]
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "数据模式",
                    "bindKey": "dataType",
                    "desc": "设置点击轮播图片数据模式",
                    "dictionary": [
                        {
                            "label": "数据源",
                            "value": "dataSource"
                        },
                        {
                            "label": "自定义",
                            "value": "custom"
                        }
                    ],
                    "default": "dataSource"
                },
                {
                    "type": "table",
                    "layoutType": "inline",
                    "text": "轮播配置",
                    "bindKey": "bannerTable",
                    "tabText": "轮播[index]",
                    "openGroup": true,
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "轮播标题",
                            "bindKey": "title",
                            "default": "标题"
                        },
                        {
                            "type": "input",
                            "layoutType": "inline",
                            "text": "跳转链接",
                            "bindKey": "jumpUrl",
                            "default": ""
                        },
                        {
                            "type": "uploadImage",
                            "layoutType": "block",
                            "text": "小屏图片",
                            "bindKey": "image",
                            "default": "defaultImage"
                        },
                        {
                            "type": "uploadImage",
                            "layoutType": "block",
                            "text": "大屏图片",
                            "bindKey": "imagexl",
                            "default": ""
                        }
                    ],
                    "display": "@[dataType === 'custom']"
                },
                {
                    "type": "treeSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "bindKey": "dataSource",
                    "dataSourceUrl":"/ctrl/dataSource/getDatasourceByGroup",
                    "display": "@[dataType === 'dataSource']"
                }
            ]
        }
    ]
}