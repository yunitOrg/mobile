{
  "classId": "idm.component.mobile.iactivitylist",
  "comName": "活动列表",
  "className": "IActivityList",
  "comType": "common",
  "comLangue": "vue",
  "compositeAttr": [
      {
          "type": "input",
          "layoutType": "inline",
          "text": "唯一标识",
          "bindKey": "ctrlId",
          "disabled": true,
          "default": "@[packageid]",
          "desc": "",
          "helpUrl": ""
      },
      {
        "type": "group",
        "text": "外层样式",
        "desc": "点击？查看样式设置用法指南",
        "helpUrl": "",
        "children": [
          {
            "type": "inlineGroup",
            "text": "宽高",
            "children": [
              {
                "type": "input",
                "layoutType": "block",
                "text": "宽",
                "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                "bindKey": "width",
                "width": "60px",
                "default": "auto"
              },
              {
                "type": "input",
                "layoutType": "block",
                "text": "高",
                "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                "bindKey": "height",
                "width": "60px",
                "default": "45px"
              }
            ]
          },
          {
            "type": "box",
            "layoutType": "block",
            "text": "内外边距",
            "bindKey": "ulbox",
            "default": {
              "marginTopVal": "",
              "marginRightVal": "",
              "marginBottomVal": "",
              "marginLeftVal": "",
              "paddingTopVal": "",
              "paddingRightVal": "",
              "paddingBottomVal": "",
              "paddingLeftVal": ""
            }
          },
          {
            "type": "colorPicker",
            "layoutType": "inline",
            "text": "背景色",
            "bindKey": "bgColor",
            "placeholder": "请选择颜色",
            "default": {
              "hex8": "#FFFFFFFF"
            }
          },
          {
            "type": "input",
            "layoutType": "inline",
            "text": "容器阴影",
            "bindKey": "boxShadow",
            "default": "0px 0px 10px 0px #ccc"
          },
          {
            "type": "border",
            "layoutType": "block",
            "text": "边框",
            "bindKey": "boxborder"
          }
        ]
      },
      {
        "type": "group",
        "text": "高级",
        "desc": "点击？查看高级设置用法指南",
        "children": [
          {
            "type": "actionSelect",
            "layoutType": "block",
            "text": "下拉参数过滤",
            "desc": "下拉数据源参数自定义函数",
            "bindKey": "customFunc",
            "multiple": false
          },
          {
            "type": "dataSourceSelect",
            "layoutType": "block",
            "text": "下拉数据源",
            "bindKey": "dataSource"
          },
          {
            "type": "pageModuleSelect",
            "layoutType": "block",
            "text": "tab菜单联动组件",
            "desc": "选择点击tab需要联动的组件",
            "bindKey": "triggerComponents",
            "multiple": true
          },
          {
            "type": "input",
            "layoutType": "block",
            "text": "发送消息key",
            "desc": "发送消息key",
            "bindKey": "sendKey"
          }
        ]
      }
  ]
}