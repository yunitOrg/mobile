{
    "classId": "idm.component.mobile.imymessagetop",
    "comName": "我的信息头部",
    "className": "IMyMessageTop",
    "comType": "common",
    "comLangue": "vue",
    "compositeAttr": [
        {
            "type": "input",
            "layoutType": "inline",
            "text": "唯一标识",
            "bindKey": "ctrlId",
            "disabled": true,
            "default": "@[packageid]",
            "desc": "",
            "helpUrl": ""
        },
        {
            "type": "group",
            "text": "基本属性",
            "desc": "提供设置组件能达到展示效果的基本属性设置信息",
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "跳转方式",
                    "bindKey": "jumpStyle",
                    "desc": "设置点击轮播图片时跳转方式, 链接打开时使用window.open配置的数据源链接",
                    "dictionary": [
                        {
                            "label": "子页面打开",
                            "value": "_child"
                        },
                        {
                            "label": "接口链接",
                            "value": "_link"
                        },
                        {
                            "label": "自定义链接",
                            "value": "_custom_link"
                        },
                        {
                            "label": "自定义函数",
                            "value": "_custom_func"
                        }
                    ],
                    "default": "_link"
                },
                {
                    "type": "pageSelect",
                    "layoutType": "inline",
                    "text": "详情页面",
                    "display": "@[jumpStyle === '_child']",
                    "bindKey": "morePageList",
                    "desc": "选择要打开的子页面"
                },
                {
                    "type": "radio",
                    "styleType": "radio",
                    "layoutType": "inline",
                    "text": "是否缓存",
                    "display": "@[jumpStyle === '_child']",
                    "bindKey": "isPageKeep",
                    "desc": "跳转子页面时，是否缓存本页面",
                    "default": true,
                    "dictionary": [
                        {
                            "label": "是",
                            "value": true
                        },
                        {
                            "label": "否",
                            "value": false
                        }
                    ]
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "跳转链接",
                    "defaultValRegExp": false,
                    "display": "@[jumpStyle === '_custom_link']",
                    "bindKey": "customLink"
                },
                {
                    "type": "actionSelect",
                    "layoutType": "block",
                    "text": "自定义跳转函数",
                    "display": "@[jumpStyle === '_custom_func']",
                    "bindKey": "jumpCustomFunc",
                    "multiple": false
                }
            ]
        },
        {
            "type": "group",
            "text": "样式设置",
            "desc": "点击？查看样式设置用法指南",
            "helpUrl": "",
            "children": [
                {
                    "type": "inlineGroup",
                    "text": "宽高",
                    "children": [
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "宽",
                            "desc": "填写auto则为自适应，或者使用px、%、vw等单位，比如100%、100px、100vw等等",
                            "bindKey": "width",
                            "width": "60px",
                            "default": "100%"
                        },
                        {
                            "type": "input",
                            "layoutType": "block",
                            "text": "高",
                            "desc": "填写auto则为自适应，或者使用px、%、vh等单位，比如100%、100px、100vh等等",
                            "bindKey": "height",
                            "width": "60px",
                            "default": "auto"
                        }
                    ]
                },
                {
                    "type": "box",
                    "layoutType": "block",
                    "text": "内外边距",
                    "bindKey": "box",
                    "default": {
                        "marginTopVal": "",
                        "marginRightVal": "",
                        "marginBottomVal": "",
                        "marginLeftVal": "",
                        "paddingTopVal": "20px",
                        "paddingRightVal": "10px",
                        "paddingBottomVal": "20px",
                        "paddingLeftVal": ""
                    }
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "背景色",
                    "bindKey": "bgColor",
                    "placeholder": "请选择颜色",
                    "default": {}
                },
                {
                    "type": "border",
                    "layoutType": "block",
                    "text": "边框",
                    "bindKey": "border"
                },
                {
                    "type": "input",
                    "layoutType": "inline",
                    "text": "阴影",
                    "bindKey": "boxShadow"
                },
                {
                    "type": "group",
                    "text": "头像样式",
                    "children": [
                        {
                            "type": "inlineGroup",
                            "text": "宽高",
                            "children": [
                                {
                                    "type": "inputNumber",
                                    "layoutType": "block",
                                    "text": "宽",
                                    "bindKey": "avatarWidth",
                                    "default": 90
                                },
                                {
                                    "type": "inputNumber",
                                    "layoutType": "block",
                                    "text": "高",
                                    "bindKey": "avatarHeight",
                                    "default": 90
                                }
                            ]
                        },
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "avatarBox",
                            "default": {
                                "marginTopVal": "",
                                "marginRightVal": "20px",
                                "marginBottomVal": "",
                                "marginLeftVal": "30px",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        },
                        {
                            "type": "border",
                            "layoutType": "block",
                            "text": "边框",
                            "bindKey": "avatarBorder",
                            "default": {
                                "border": {
                                    "top": {
                                        "style": "solid",
                                        "width": 2,
                                        "widthUnit": "px",
                                        "colors": {
                                            "hex": "#FFFFFF",
                                            "hex8": "#FFFFFFFF"
                                        }
                                    },
                                    "right": {
                                        "style": "solid",
                                        "width": 2,
                                        "widthUnit": "px",
                                        "colors": {
                                            "hex": "#FFFFFF",
                                            "hex8": "#FFFFFFFF"
                                        }
                                    },
                                    "bottom": {
                                        "style": "solid",
                                        "width": 2,
                                        "widthUnit": "px",
                                        "colors": {
                                            "hex": "#FFFFFF",
                                            "hex8": "#FFFFFFFF"
                                        }
                                    },
                                    "left": {
                                        "style": "solid",
                                        "width": 2,
                                        "widthUnit": "px",
                                        "colors": {
                                            "hex": "#FFFFFF",
                                            "hex8": "#FFFFFFFF"
                                        }
                                    }
                                },
                                "radius": {
                                    "leftTop": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    },
                                    "rightTop": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    },
                                    "leftBottom": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    },
                                    "rightBottom": {
                                        "radius": 50,
                                        "radiusUnit": "px"
                                    }
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "昵称样式",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "usernameBox"
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "字体",
                            "bindKey": "usernameFont",
                            "default": {
                                "fontSize": 18,
                                "fontSizeUnit": "px",
                                "fontColors": {
                                    "hex": "#FFFFFF",
                                    "hex8": "#FFFFFFFF"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "第一行样式",
                    "desc": "(昵称/用户名)下面的第一行样式",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "yearBox",
                            "default": {
                                "marginTopVal": "3px",
                                "marginRightVal": "",
                                "marginBottomVal": "3px",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "字体",
                            "bindKey": "yearFont",
                            "default": {
                                "fontSize": 14,
                                "fontSizeUnit": "px",
                                "fontColors": {
                                    "hex": "#FFFFFF",
                                    "hex8": "#FFFFFFFF"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "第二行样式",
                    "desc": "(昵称/用户名)下面的第二行样式",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "branchBox"
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "字体",
                            "bindKey": "branchFont",
                            "default": {
                                "fontSize": 14,
                                "fontSizeUnit": "px",
                                "fontColors": {
                                    "hex": "#FFFFFF",
                                    "hex8": "#FFFFFFFF"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "第三行样式",
                    "desc": "(昵称/用户名)下面的第三行样式",
                    "children": [
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "phoneBox",
                            "default": {
                                "marginTopVal": "3px",
                                "marginRightVal": "",
                                "marginBottomVal": "3px",
                                "marginLeftVal": "",
                                "paddingTopVal": "",
                                "paddingRightVal": "",
                                "paddingBottomVal": "",
                                "paddingLeftVal": ""
                            }
                        },
                        {
                            "type": "font",
                            "layoutType": "block",
                            "text": "字体",
                            "bindKey": "phoneFont",
                            "default": {
                                "fontSize": 14,
                                "fontSizeUnit": "px",
                                "fontColors": {
                                    "hex": "#FFFFFF",
                                    "hex8": "#FFFFFFFF"
                                }
                            }
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "图标样式",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "图标大小",
                            "bindKey": "iconSize",
                            "default": 25
                        },
                        {
                            "type": "colorPicker",
                            "layoutType": "inline",
                            "text": "图标颜色",
                            "bindKey": "iconColor",
                            "default": {
                                "hex": "#FFFFFF",
                                "hex8": "#FFFFFFFF"
                            }
                        },
                        {
                            "type": "box",
                            "layoutType": "block",
                            "text": "内外边距",
                            "bindKey": "iconBox"
                        }
                    ]
                }
            ]
        },
        {
            "type": "table",
            "text": "主题设置",
            "desc": "点击？查看主题设置用法指南",
            "bindKey": "themeList",
            "tabText": "主题[index]",
            "default": [
                {
                    "key": "blue",
                    "mainColor": {
                        "hex": "#0073CA",
                        "hex8": "#0073CAFF"
                    }
                },
                {
                    "key": "red",
                    "mainColor": {
                        "hex": "#E21A1A",
                        "hex8": "#E21A1AFF"
                    }
                },
                {
                    "key": "green",
                    "mainColor": {
                        "hex": "#0EAF64",
                        "hex8": "#0EAF64FF"
                    }
                }
            ],
            "children": [
                {
                    "type": "select",
                    "layoutType": "inline",
                    "text": "主题标识",
                    "bindKey": "key",
                    "multiple": false,
                    "desc": "用于设置主题的标识，此项需要搭配自定义开发切换主题的功能，例如：蓝色标识为blue，用户切换主题的时候存储到数据库中的标识为blue，则这里填写为blue",
                    "default": "",
                    "placeholder": "例如：blue",
                    "ctrlAttrObject": {
                        "mode": "combobox"
                    },
                    "dictionary": [
                        {
                            "label": "blue",
                            "value": "blue"
                        },
                        {
                            "label": "red",
                            "value": "red"
                        },
                        {
                            "label": "green",
                            "value": "green"
                        }
                    ]
                },
                {
                    "type": "colorPicker",
                    "layoutType": "inline",
                    "text": "主要颜色",
                    "bindKey": "mainColor",
                    "desc": "主题的主要颜色",
                    "placeholder": "请选择颜色",
                    "display": "@[key]"
                }
            ]
        },
        {
            "type": "group",
            "text": "高级",
            "desc": "点击？查看高级设置用法指南",
            "children": [
                {
                    "type": "dataSourceSelect",
                    "layoutType": "inline",
                    "text": "数据源",
                    "bindKey": "dataSource"
                },
                {
                    "type": "group",
                    "text": "适配设置",
                    "desc": "通过设置属性来适配移动端页面尺寸",
                    "children": [
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "基准值",
                            "desc": "此属性用于标记当前组件在显示效果最完美情况下的宽度大小（px），例如：此组件显示效果最佳宽度为414px，则此处设置为414即可，如果此组件最佳效果为当前配置的屏幕宽（px）的一半则只需要除以2即可。",
                            "bindKey": "baseSize",
                            "default": 414
                        },
                        {
                            "type": "inputNumber",
                            "layoutType": "inline",
                            "text": "适配比例",
                            "desc": "与基准值配合使用，如果在实际预览屏幕宽为基准值的两倍，则此组件所有可适配的内容都会基于此处设置的适配比例相对应的进行放大缩小，例如此处设置1.2，则会相对应的放大至1.2倍",
                            "bindKey": "adaptationRatio",
                            "default": 1.2
                        }
                    ]
                },
                {
                    "type": "group",
                    "text": "字段设置",
                    "desc": "设置组件中展示的对应字段",
                    "children": [
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "头像字段",
                            "bindKey": "avatarField",
                            "default": "avatar"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "昵称字段",
                            "bindKey": "usernameField",
                            "default": "username"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "第一字段",
                            "desc": "名称下面显示的第一行数据，没有返回数据就不显示",
                            "bindKey": "yearField",
                            "default": "partySeniority"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "第二字段",
                            "desc": "名称下面显示的第二行数据，没有返回数据就不显示",
                            "bindKey": "branchField",
                            "default": "partyBranch"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "第三字段",
                            "desc": "名称下面显示的第三行数据，没有返回数据就不显示",
                            "bindKey": "phoneField",
                            "default": "phone"
                        },
                        {
                            "type": "dataSourceFiledSelect",
                            "layoutType": "inline",
                            "text": "右侧跳转",
                            "desc": "右侧跳转链接字段",
                            "bindKey": "jumpUrlField",
                            "default": "jumpUrl"
                        }
                    ]
                }
            ]
        }
    ]
}
